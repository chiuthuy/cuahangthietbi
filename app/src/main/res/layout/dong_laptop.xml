<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#F1EFEF"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#FCFCFA"

            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:id="@+id/imgLaptop"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <LinearLayout

                android:background="#F3F3F2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:id="@+id/txtLaptop"
                    android:text="Ten sp"
                    android:textColor="#222213"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Gia sp"
                    android:id="@+id/txtGiaLaptop"
                    android:textColor="#080BC5"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/txtMotaLt"
                    android:text="Mo ta dien thoai"
                    android:textSize="18sp"
                    android:textColor="#252521"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>